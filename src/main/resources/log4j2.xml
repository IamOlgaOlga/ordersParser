<Configuration status="INFO">
    <Appenders>
        <File name="ParserLog" fileName="src/main/resources/parserLog.log"
              immediateFlush="true" append="false">
            <PatternLayout pattern=
                                   "%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ParserLog"/>
        </Root>
    </Loggers>
</Configuration>